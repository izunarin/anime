<div class="container">
  <h2>アニメ詳細</h2>
    <table>
     <tr>
        <td>
          <h4>アニメ名</h4>
        </td>
      </tr>

      <tr>
        <td>
          <h3><%= @item.name %></h3>
        </td>
        
        <td>
          <% if @item.like_by?(current_customer) %>
            <p>
              <%= link_to public_item_likes_path(@item), method: :delete do %>
                ♥<%= @item.likes.count %> いいね
              <% end %>
            </p>
              <% else %>
             <p>
              <%= link_to public_item_likes_path(@item), method: :post do %>
                ♡<%= @item.likes.count %> いいね
              <% end %>
            </p>
          <% end %>
        </td>
      </tr>
      </table>
      
      <div class="p-1">　</div>

      <table>
　　　<tr>
        <td width="200">
          <h4>季節</h4>
        </td>

        <td>
          <h4>曜日</h4>
        </td>
      </tr>

      <tr>
        <td>
          <%= @item.genre_i18n %>
        </td>

        <td>
          <%= @item.weekday_i18n %>
        </td>
      </tr>
      </table>
      
      <div class="p-1">　</div>

      <table>
      <tr>
        <td>
          <h4>アニメ説明</h4>
        </td>
      </tr>

      <tr>
       <td colspan="2"><%= @item.introduction %></td>
      </tr>
      </table>
      
      <div class="p-3">　</div>

      <table>
      <tr>
        <td>
          <h4>アニメURL</h4>
        </td>
      </tr>

      <tr>
        <td colspan="2">
          <%=link_to  "アニメリンク",@item.url %>
        </td>
      </tr>
      </table>
      
      <div class="p-1">　</div>

    
    <div>
     <%= form_with model: [@item, @comment], url: public_item_comments_path(@item) do |f| %>
       <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに", cols: "100" %><br/>
       <%= f.submit "送信する" %>
     <% end %>
    </div>
    

    <% @item.comments.each do |comment| %>
    <table class="table table-bordered">
      <tr>
        <td width="70">
          <div class="text-break">
          <%= comment.customer.name %>
          </div>
        </td>

        <td>
           <div>
            <%= comment.comment %>
          </div>
        </td>

        <td width="70">
          <% if comment.customer == current_customer %>
          <%= link_to "削除", public_item_comment_path(comment.item, comment), method: :delete %>
          <% end %>
        </td>
      </tr>
    </table>
    <% end %>
</div>