<div class="container">
  
  <h2>新規登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th width="200">名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    
    <tr>
    <div class="field">
     <th><%= f.label :パスワード %></th>
     <td><%= f.password_field :password, autocomplete: "current-password" %></td>
     </div>
    </tr>

    
    <tr>
      <td></td>
      <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
    </tr>
  </table>
  <% end %>
  
  <div>
   <h2>既に登録済みの方</h2>
   <%= link_to "こちら",  new_customer_session_path %>からログインしてください。
  </div>
</div>


