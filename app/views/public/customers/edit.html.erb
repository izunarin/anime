<div class="container">
  <h1>ユーザー情報編集</h1>
  <%= form_with model: @customer,url: public_customer_path(@customer.id), method: :patch do |f| %>
  <table>
    <tr>
      <td width="200">
        <h5>名前</h5>
      </td>
      
      <td>
        <%= f.text_field :name, size: "50" %>
      </td>
    </tr>
    
    <tr>
      <td>
        <h5>メールアドレス</h5>
      </td>
      
      <td>
        <%= f.text_field :email, size: "50" %>
      </td>
    </tr>
    
    <tr>
      <td></td>
      <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
    </tr>
  </table>
  <% end %>
</div>