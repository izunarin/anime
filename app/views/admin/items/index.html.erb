<div class="cotainer">

<h2>アニメ一覧</h2>

  <div class="row">
    
    <div class="col-3">
      <table>
        <tr>
        <th width="200" class="border-bottom text-center">季節</th>
        </tr>
        <% @item.each do |item| %>
        <td>
          <%= link_to admin_item_path(genre_id: genre.id) do %>
          <%= item.genre %>
          <% end %>
        </td>
        <% end %>
        
        <tr>
        <th width="200" class="border-bottom text-center">季節</th>
        </tr>
        <% @item.each do |item| %>
        <td>
          <%= link_to admin_item_path(weekday_id: weekday.id) do %>
          <%= item.weekday %>
          <% end %>
        </td>
        <% end %>
      </table>
    </div>
    
    <div class="col-9">
     <table>
        <tr>
          <td width="50">
            <h3>季節</h3>
          </td>
          
          <td width="50">
            <h3>曜日</h3>
          </td>
          
          <td width="500">
            <h3>アニメ名</h3>
          </td>
          
          <td width="100">
            <%= link_to new_admin_item_path do %>
             <h3>新アニメ登録</h3>
            <% end %>
          </td>
        </tr>
        
        <% @item.each do |item| %>
        <tr>
          <td>
            <%= item.genre %>
          </td>
          
          <td>
            <%= item.weekday %>曜日
          </td>
          
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table> 
    </div>
    
  </div>
</div>