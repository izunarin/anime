<div class="cotainer">

<h2>アニメ一覧</h2>

  <div class="row">

    <div class="col-2">
      <table>
        <tr>
        <th width="100" class="border-bottom text-center">季節</th>
        </tr>
        <% @items.each do |order| %>
        <td>
          <%= link_to admin_item_path(genre_id: genre.id) do %>
          <%= f.select :genre, Item.genres.keys.map { |k| [I18n.t("enums.item.genre.#{k}"), k] } %>
          <% end %>
        </td>
        <% end %>

        <tr>
        <th width="100" class="border-bottom text-center">曜日</th>
        </tr>
        <% @items.each do |item| %>
        <td>
          <%= link_to admin_item_path(weekday_id: weekday.id) do %>
          <%= f.select :weekday, Item.weekdays.keys.map { |k| [I18n.t("enums.item.weekday.#{k}"), k] } %>
          <% end %>
        </td>
        <% end %>
      </table>
    </div>

    <div class="col-10">
     <table>
        <tr>
          <td width="100">
            <h5>季節</h5>
          </td>

          <td width="100">
            <h5>曜日</h5>
          </td>

          <td width="800">
            <h5>アニメ名</h5>
          </td>

          <td width="100">
            <%= link_to new_admin_item_path do %>
             新アニメ登録
            <% end %>
          </td>
        </tr>

        <% @items.each do |item| %>
        <tr>
          <td>
            <%= item.genre %>
          </td>

          <td>
            <%= item.weekday %>曜日
          </td>

          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>